@model IEnumerable<GestionAcademica.Models.Profesor>

@{
    ViewData["Title"] = "Lista de Profesores";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Lista de Profesores</h2>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Profesor</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                <th>@Html.DisplayNameFor(model => model.Facultad.Nombre)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var profesor in Model)
            {
                <tr>
                    <td>@profesor.Nombre</td>
                    <td>@profesor.Correo</td>
                    <td>@profesor.Facultad.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@profesor.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@profesor.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@profesor.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

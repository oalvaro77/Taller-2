@model IEnumerable<GestionAcademica.Models.Curso>

@{
    ViewData["Title"] = "Lista de Cursos";
}

<div class="container mt-4">
    <h2 class="mb-4">Lista de Cursos</h2>

    <p>
        <a asp-action="Create" class="btn btn-success mb-3">Crear Nuevo Curso</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Creditos)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Nombre</td>
                    <td>@curso.Descripcion</td>
                    <td>@curso.Creditos</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@curso.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@curso.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@curso.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

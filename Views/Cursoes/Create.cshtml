@model GestionAcademica.Models.Curso

@{
    ViewData["Title"] = "Crear Curso";
}

<div class="container mt-5">
    <h2 class="mb-4">Crear Nuevo Curso</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del curso" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Creditos" class="form-label fw-bold"></label>
                    <input asp-for="Creditos" class="form-control" type="number" placeholder="Ingrese la cantidad de créditos" />
                    <span asp-validation-for="Creditos" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

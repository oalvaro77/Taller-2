@model GestionAcademica.Models.Matricula

@{
    ViewData["Title"] = "Crear Matrícula";
}

<h1>Crear Matrícula</h1>

<h4>Registro de Matrícula</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" class="bg-light p-4 rounded shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estudiante" class="control-label">Estudiante</label>
                <select asp-for="EstudianteId" class="form-control" asp-items="ViewBag.Estudiantes"></select>
                <span asp-validation-for="EstudianteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label">Curso</label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.Cursos"></select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaMatricula" class="control-label">Fecha de Matrícula</label>
                <input asp-for="FechaMatricula" class="form-control" type="date" />
                <span asp-validation-for="FechaMatricula" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



@model GestionAcademica.Models.Alumno

@{
    ViewData["Title"] = "Crear Alumno";
}

<div class="container mt-5">
    <h2 class="mb-4">Crear Nuevo Alumno</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del alumno" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Correo" class="form-label fw-bold"></label>
                    <input asp-for="Correo" class="form-control" placeholder="Ingrese el correo electrónico" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="FechaNacimiento" class="form-label fw-bold"></label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

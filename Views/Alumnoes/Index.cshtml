@model IEnumerable<GestionAcademica.Models.Alumno>

@{
    ViewData["Title"] = "Lista de Alumnos";
}

<div class="container mt-4">
    <h2 class="mb-4">Lista de Alumnos</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Alumno</a>
    </p>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Fecha de Nacimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alumno in Model)
            {
                <tr>
                    <td>@alumno.Nombre</td>
                    <td>@alumno.Correo</td>
                    <td>@alumno.FechaNacimiento.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@alumno.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@alumno.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@alumno.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model IEnumerable<GestionAcademica.Models.Horario>

@{
    ViewData["Title"] = "Lista de Horarios";
}

<div class="container mt-4">
    <h2 class="mb-4">Lista de Horarios</h2>

    <p>
        <a asp-action="Create" class="btn btn-success mb-3">Crear Nuevo Horario</a>
    </p>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.HoraInicio)</th>
                <th>@Html.DisplayNameFor(model => model.HoraFinal)</th>
                <th>@Html.DisplayNameFor(model => model.Dia)</th>
                <th>@Html.DisplayNameFor(model => model.Curso)</th>
                <th>@Html.DisplayNameFor(model => model.Profesor)</th>
                <th>@Html.DisplayNameFor(model => model.Alumno)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var horario in Model)
            {
                <tr>
                    <td>@horario.HoraInicio.ToString("hh:mm tt")</td>
                    <td>@horario.HoraFinal.ToString("hh:mm tt")</td>
                    <td>@horario.Dia</td>
                    <td>@horario.Curso.Nombre</td>
                    <td>@horario.Profesor.Nombre</td>
                    <td>@horario.Alumno.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@horario.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@horario.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@horario.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
